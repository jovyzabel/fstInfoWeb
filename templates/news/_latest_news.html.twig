<div>
    <h5>Actualités récentes</h5>
    <div class="text-subline"></div>
    <div class="p-0">

        <ul class="list-unstyled mt-1">
        {% for article in latest_articles %}
            <li class="p-2 mb-1 bg-light rounded">
                <div>
                    <h6>
                        <a href="{{path('app_news_show', {'slug': article.slug})}}" class="text-decoration-none item-title">{{article.title}}</a>
                    </h6>
                    <div class="row">
                        <div class="col"><small class=""><i class="fa-solid fa-calendar-days"></i><em> {{article.createdAt | date('d/m/Y')}}</em> </small></div>
                        </div>
                </div>
            </li>  
        {% endfor %}
        </ul>
                    
    </div>
</div>    